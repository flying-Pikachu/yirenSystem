<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离
注意：使用mapper代理方法开发，namespace有特殊重要的作用
-->
<mapper namespace="car">

    <select id="findAllCars" resultType="com.deepcloud.been.Car">
        SELECT * FROM car;
    </select>
    <select id="findCarsByUserName" parameterType="String" resultType="com.deepcloud.been.Car">
        SELECT * FROM car WHERE carID = #{carID};
    </select>
    <delete id="deleteCar" parameterType="String">
        DELETE FROM car WHERE carID = #{carID};
    </delete>


</mapper>